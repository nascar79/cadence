<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context="qwerty.cadence.WheelSettings"
        android:background="@color/blackText"
        android:clickable="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/start"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:contentDescription=""
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/frontStarInputThird"
            android:layout_toStartOf="@+id/frontStarInputThird"
            android:gravity="top"
            android:id="@+id/settingsScreen"
            android:focusableInTouchMode="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/frontGear"
                android:id="@+id/frontStarText"
                android:textColor="@color/whiteText"
                android:textAlignment="center"
                android:textSize="@dimen/menuTextSize"
                tools:ignore="RelativeOverlap,UnusedAttribute" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/FrontStars">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/frontStarInputFirst"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/whiteText"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="35dp"
                    tools:ignore="Deprecated" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/frontStarInputSecond"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/greySpeed"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="35dp" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/frontStarInputThird"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/whiteText"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="35dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/rearGear"
                android:id="@+id/rearStarText"
                android:textColor="@color/whiteText"
                android:textAlignment="center"
                android:textSize="@dimen/menuTextSize"
                android:layout_marginTop="50dp"
                tools:ignore="UnusedAttribute" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/rearStras">

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/whiteText"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1"
                    android:id="@+id/rearStarInputFirst"
                     />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/rearStarInputSecond"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/greySpeed"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/rearStarInputThird"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/whiteText"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/rearStarInputFourth"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/greySpeed"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/rearStarInputFifth"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/whiteText"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/rearStarInputSixth"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/greySpeed"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/rearStarInputSeventh"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/whiteText"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/rearStarInputEighth"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/greySpeed"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/rearStarInputNinth"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/whiteText"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1" />

                <EditText
                    tools:ignore="Deprecated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/rearStarInputTenth"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/menuTextSize"
                    android:background="@color/greySpeed"
                    android:textIsSelectable="true"
                    android:numeric="integer"
                    android:maxLength="2"
                    android:width="50dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="@string/circuit"
              android:id="@+id/circuitText"
              android:textColor="@color/whiteText"
              android:textAlignment="center"
              android:textSize="@dimen/menuTextSize"
              android:layout_marginTop="25dp"
                tools:ignore="UnusedAttribute" />

            <EditText
              android:layout_width="102dp"
              android:layout_height="wrap_content"
              android:inputType="numberSigned"
              android:ems="10"
              android:id="@+id/circuitInput"
              android:textColor="@color/blackText"
              android:textSize="@dimen/menuTextSize"
              android:background="@color/whiteText"
              android:textIsSelectable="true"
              android:maxLength="3"
                android:width="150dp"
              android:numeric="decimal"
                tools:ignore="Deprecated"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/startBtnText"
                  android:id="@+id/nextBtn"
                    android:layout_marginTop="25dp"
                  android:onClick="startBtnClick" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>
